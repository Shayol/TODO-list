      <div id="task_row_<%= task.id %>">
        <% if task.id %>
          <% if task.completed == false then %>
            <div class="row" >
          <% else %>
            <div class="row" style="opacity: 0.5;">
          <% end %>
          <div class="col-md-1 col-md-offset-2">
            <%= link_to task_completed_project_task_path(project, task.id), method: :patch do %>
              <i class="fa fa-check"></i>
            <% end %>
          </div>
          <div class="col-md-4">
              <i><%= task.content %>--<%= task.priority %></i>
          </div>
          <div class="col-md-2">
            <%= link_to priority_up_project_task_path(project, task.id), method: :patch do %>
              <i class="fa fa-sort-asc"></i>
            <% end %>
            -
            <%= link_to priority_down_project_task_path(project, task.id), method: :patch do %>
              <i class="fa fa-sort-desc"></i>
            <% end %>
            |<%= link_to edit_project_task_path(project, task), remote: true do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            |<%= link_to url_for([project, task]), method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash"></i>
            <% end %>
          </div>
      </div>
        <% end %>
      </div>